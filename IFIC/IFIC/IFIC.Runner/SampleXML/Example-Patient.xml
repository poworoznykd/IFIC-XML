<Bundle xmlns="http://hl7.org/fhir">
  <id value="example-irrs-patient-bundle"/>
  <type value="transaction"/>
  
  <entry>
    <fullUrl value="urn:uuid:123e4567-e89b-12d3-a456-426614174000"/>
    <resource>
      <Patient xmlns="http://hl7.org/fhir">
        <id value="example-irrs-patient"/>
        <meta>
          <profile value="http://cihi.ca/fhir/irrs/StructureDefinition/irrs-patient"/>
        </meta>
        
        <!--  Sex at birth  -->
        <extension url="http://cihi.ca/fhir/irrs/StructureDefinition/irrs-ext-birth-sex">
          <valueCode value="F"/>
        </extension>
        
        <!--  Health card number  -->
        <identifier>
          <type>
            <coding>
              <system value="http://hl7.org/fhir/v2/0203"/>
              <code value="JHN"/>
            </coding>
          </type>
          <system value="https://fhir.infoway-inforoute.ca/NamingSystem/ca-on-patient-hcn"/>
          <value value="1312121211SS"/>
        </identifier>
        
        <!--  Case record number  -->
        <identifier>
          <type>
            <coding>
              <system value="http://hl7.org/fhir/v2/0203"/>
              <code value="MR"/>
            </coding>
          </type>
          <system value="http://acme.vendor.com/facility-x"/>
          <value value="CRN12345"/>
        </identifier>
        
        <!--  Birth date  -->
        <birthDate value="2008-09-01"/>
        
        <!--  Postal Code  -->
        <address>
          <use value="home"/>
          <postalCode value="Z1Z1Z1"/>
        </address>
        
        <!--  Primary Language  -->
        <communication>
          <language>
            <coding>
              <code value="en"/>
            </coding>
          </language>
        </communication>
        
        <!--  Facility/Agency identifier  -->
        <managingOrganization>
          <identifier>
            <system value="http://cihi.ca/fhir/NamingSystem/cihi-submission-identifier"/>
            <value value="CIHITESTIRRS30"/>
          </identifier>
        </managingOrganization>
      </Patient>
    </resource>
    
    <!-- Request for transaction -->
    <request>
      <method value="POST"/>
      <url value="Patient"/>
    </request>
  </entry>
</Bundle>
